# Common Variables
# ------------------------------
# The name of the project.

COMPOSE_PROJECT_NAME=servo_ai

# ========== 日志配置 ==========
# 日志级别，默认值为10，即DEBUG级别。
# 可选值：CRITICAL=50, ERROR=40, WARNING=30, INFO=20, DEBUG=10, NOTSET=0
LOGGING_LEVEL=15
LOG_DIR="logs"
LOG_FILE_MAX_SIZE= 10485760
LOG_FILE_BACKUP_COUNT=5
LOG_FORMAT="%(asctime)s %(levelname)-2s [%(name)s] [%(filename)s:%(lineno)d] - %(message)s" # 日志格式

# ========== 数据库配置 ==========
# 数据库连接配置，用于连接MySQL数据库。
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=root
DB_PASSWORD=123456
DB_NAME=servo_ai

# ========== Redis配置 ==========
# Redis连接配置，用于连接Redis数据库。
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=123456
REDIS_DB=0

# ========== PostgreSQL配置 ==========
# PostgreSQL连接配置（新增）
POSTGRES_HOST=127.0.0.1          # 本地开发默认地址
POSTGRES_PORT=5432               # PostgreSQL默认端口
POSTGRES_USER=postgres           # 默认管理员用户
POSTGRES_PASSWORD=123456         # 自定义密码（生产环境需修改）
POSTGRES_DB_NAME=servo_ai_pg     # 数据库名